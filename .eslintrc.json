{
  "env": {
    "browser": true,
    "es2021": true
  },
  "ignorePatterns": ["next.config.mjs"],
  "extends": ["standard-with-typescript", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off",
    "semi": ["error", "never"],
    "space-before-function-paren": ["error", "always"],
    "quotes": ["error", "single"]
  }
}
